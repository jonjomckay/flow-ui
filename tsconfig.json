{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": false, // TODO
        "paths": {
            "@jonjomckay/*": ["packages/*/src"]
        },
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6"
    },
    "exclude": [
        "dist",
        "node_modules"
    ]
}
{
    "name": "root",
    "private": true,
    "license": "MIT",
    "scripts": {
        "start": "lerna run --parallel start --stream",
        "build": "lerna run --parallel build --stream",
        "test": "lerna run test --stream",
        "lint": "eslint ./src/**/*.{ts,tsx} --max-warnings=0 --format=codeframe",
        "preversion": "yarn build"
    },
    "dependencies": {
        "@reduxjs/toolkit": "^1.3.6",
        "@testing-library/jest-dom": "^5.8.0",
        "@testing-library/react": "^10.0.4",
        "@testing-library/user-event": "^7.1.2",
        "@types/classnames": "^2.2.10",
        "@types/jest": "^25.2.3",
        "@types/node": "^14.0.5",
        "@types/react": "^16.9.35",
        "@types/react-dom": "^16.9.8",
        "@types/react-redux": "^7.1.9",
        "antd": "^4.2.4",
        "axios": "^0.19.2",
        "classnames": "^2.2.6",
        "jodit": "git+https://github.com/xdan/jodit.git#26556c0517f6453c2a6822afc33f8aa8a08a84a1",
        "react-scripts": "3.4.0"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^12.0.0",
        "@rollup/plugin-node-resolve": "^8.0.0",
        "@typescript-eslint/eslint-plugin": "^3.0.0",
        "@typescript-eslint/parser": "^3.0.0",
        "@wessberg/rollup-plugin-ts": "^1.2.24",
        "babel-eslint": "10.0.3",
        "babel-plugin-import": "^1.13.0",
        "customize-cra": "^0.9.1",
        "eslint": "6.8.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-config-react-app": "^5.1.0",
        "eslint-plugin-flowtype": "^4.5.3",
        "eslint-plugin-import": "^2.19.1",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.17.0",
        "eslint-plugin-react-hooks": "^2.3.0",
        "jest-prop-type-error": "^1.1.0",
        "lerna": "^3.18.1",
        "less": "^3.11.1",
        "less-loader": "^5.0.0",
        "prettier": "^1.19.1",
        "react-app-rewired": "^2.1.6",
        "rollup": "^2.11.2",
        "rollup-plugin-peer-deps-external": "^2.2.2",
        "rollup-plugin-styles": "^3.6.1",
        "typescript": "3.9.3"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!src/setupTests.{ts,tsx}",
            "!src/index.{ts,tsx}",
            "!src/serviceWorker.{ts,tsx}",
            "!src/**/*.(spec|test|stories).{ts,tsx}"
        ],
        "coverageThreshold": {
            "global": {
                "statements": 98,
                "branches": 98,
                "functions": 98,
                "lines": 98
            }
        }
    }
}
